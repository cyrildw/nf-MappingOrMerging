params {
   merge_bam = false
   outdir = './results'
   genome = ''
   bt2index = ''
   genome_prefix = 'SacCer3'
   bowtie_mapping = true
   bowtie_id = 'BOWTIE'
   subread_mapping = false
   subread_id = 'SUBREAD'
   mapped_id='BOWTIE'

   trim_galore_options '--nextseq 20 --illumina --gzip --paired --no_report_file --suppress_warn' //do no indicate cpus
   //Samtools filtering options '-f 3 -F 4 -q 10'
   //bamCoverage options '--binSize 25 --normalizeUsing CPM --exactScaling'

   samtools_q_filter = 0
   bin_size = 25
   input_design = './InputFiles.csv'
   input_dir = './data/'
}
process {
   container = ''
   queue = ''
   time = ''
   withLabel: 'multiCpu' {
      cpus=6
   }
   withLabel: 'multiCpu_short'{
      cpus=3
      time = '1h'
   }
   withLabel: 'local' {
      executor = 'local'
   }
   withLabel: 'usePicard' {
      container = 'gatk.simg'
   }

}
executor {
   name = 'pbspro'
   pollInterval = '1 min'
   queueStatInterval = '2 min'
   exitReadTimeout = '3600 sec'
}
singularity {
   enabled = true
   autoMounts = true
}
